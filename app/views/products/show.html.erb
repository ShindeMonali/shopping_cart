<h1>Listing Products</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Size</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @product.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.size %></td>
      <td><%= product.description %></td>
      <td><%= link_to 'Update', products_edit_path(product)%></td>
      <td><%= link_to 'Delete', products_delete_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>