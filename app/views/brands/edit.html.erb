<%= render "shared/header"%>

<%= link_to 'Back', brands_show_path %>

<h1 style="color:#000080"><center>Update Edit</center></h1>
<%= form_for @brand, url: {:controller => :brands, action: :update}, html: { method: :put } do |form| %>
    <% if @brand.errors.any? %>
    <div id="error_explanation">
        <ul>
        <% @brand.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
    <p>
    <%= form.label :Brand_name %><br>
    <%= form.text_field :name, placeholder: "Enter Name" %>
    </p>
    
    <p>
    <%= form.label :Logo %><br>
    <%= form.file_field :logo%><br>
    </p>

    <p>
    <%= form.label :Description %><br>
    <%= form.text_field :description, placeholder: "Enter description" %>
    </p>
    <p>
    <%= form.button "Update"%>
    </p>
<% end %>

<%= render "shared/footer"%>
