<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Size</th>
    <th>Description</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.images.first.thumb.url %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.size %></td>
      <td><%= product.description %></td>
      <% if current_user.role_id == 1%>
      <td><%= link_to 'Update', products_edit_path(product)%></td>
      <td><%= link_to 'Delete', products_delete_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end%>
    </tr>
  <% end %>
</table>
<%= paginate @products %>
